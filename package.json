{
  "name": "daily-trends",
  "version": "1.0.0",
  "description": "",
  "repository": {
    "url": "https://github.com/ivanfernandez2646/daily-trends"
  },
  "license": "",
  "engines": {
    "node": ">=18.16.0",
    "npm": ">=9.5.1"
  },
  "scripts": {
    "dev:cms:backend": "NODE_ENV=dev ts-node-dev --ignore-watch node_modules ./src/apps/cms/backend/start.ts",
    "lint": "eslint --ignore-path .gitignore .",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run test:unit && npm run test:features",
    "test:unit": "NODE_ENV=test jest",
    "start:cms:backend": "NODE_ENV=production node dist/src/apps/cms/backend/start",
    "test:features": "npm run test:cms:backend:features",
    "test:cms:backend:features": "NODE_ENV=test cucumber-js -p cms_backend",
    "build": "npm run build:clean && npm run build:tsc && npm run build:di",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:di": "copy 'src/**/*.{json,yaml,html,png}' dist/src",
    "build:clean": "rm -r dist; exit 0"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "bodybuilder": "^2.5.0",
    "bson": "^5.3.0",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.6",
    "cookie-session": "^2.0.0",
    "copy": "^0.0.1",
    "errorhandler": "^1.5.1",
    "express": "^4.18.2",
    "express-promise-router": "^4.1.1",
    "express-validator": "^7.0.1",
    "glob": "^10.2.7",
    "helmet": "^7.0.0",
    "http-status": "^1.6.2",
    "node-dependency-injection": "^3.0.5",
    "nunjucks": "^3.2.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/connect-flash": "0.0.37",
    "@types/cookie-parser": "^1.4.3",
    "@types/cookie-session": "^2.0.44",
    "@types/cucumber": "^6.0.1",
    "@types/errorhandler": "1.5.0",
    "@types/express": "^4.17.17",
    "@types/glob": "^8.1.0",
    "@types/helmet": "0.0.48",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/nunjucks": "^3.2.2",
    "@types/supertest": "^2.0.12",
    "cucumber": "^6.0.5",
    "eslint": "^8.42.0",
    "eslint-config-codely": "^2.1.3",
    "faker": "^5.5.3",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "13.2.2",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "prettier --write",
      "npm run lint:fix",
      "git add"
    ]
  }
}
