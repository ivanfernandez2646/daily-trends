{
  "name": "daily-trends",
  "version": "1.0.0",
  "description": "",
  "repository": {
    "url": "https://github.com/ivanfernandez2646/daily-trends"
  },
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.16.0",
    "npm": ">=9.5.1"
  },
  "scripts": {
    "dev": "NODE_ENV=dev ts-node-dev --ignore-watch node_modules ./src/apps/cms/backend/start.ts",
    "lint": "eslint --ignore-path .gitignore .",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run test:unit && npm run test:integration && npm run test:features",
    "test:unit": "NODE_ENV=test jest --forceExit --verbose",
    "test:features": "NODE_ENV=test jest --forceExit --verbose --runInBand --config=./jest.config.cucumber.js",
    "test:integration": "NODE_ENV=test jest --forceExit --verbose --runInBand --config=./jest.config.integration.js",
    "start:prod": "NODE_ENV=production node dist/src/apps/cms/backend/start",
    "build": "npm run build:clean && npm run build:tsc && npm run build:di && npm run build:swagger && npm run lint",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:di": "copy 'src/**/*.{json,yaml,html,png}' dist/src",
    "build:swagger": "copy 'docs/openapi.yml' dist",
    "build:clean": "rm -r dist; exit 0"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "bodybuilder": "^2.5.0",
    "bson": "^5.3.0",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "convict": "^6.2.4",
    "cookie-parser": "^1.4.6",
    "cookie-session": "^2.0.0",
    "copy": "^0.3.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "errorhandler": "^1.5.1",
    "express": "^4.18.2",
    "express-promise-router": "^4.1.1",
    "express-validator": "^7.0.1",
    "glob": "^10.2.7",
    "http-status": "^1.6.2",
    "jest-cucumber": "^3.0.1",
    "jsdom": "^22.1.0",
    "moment": "^2.29.4",
    "mongodb": "^5.6.0",
    "node-dependency-injection": "^2.7.1",
    "nunjucks": "^3.2.4",
    "puppeteer": "^20.7.2",
    "swagger-ui-express": "^4.6.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "uuid": "^9.0.0",
    "winston": "^3.9.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@types/compression": "^1.7.2",
    "@types/connect-flash": "0.0.37",
    "@types/convict": "^6.1.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cookie-session": "^2.0.44",
    "@types/cors": "^2.8.13",
    "@types/errorhandler": "1.5.0",
    "@types/express": "^4.17.17",
    "@types/glob": "^8.1.0",
    "@types/helmet": "0.0.48",
    "@types/jest": "^29.5.2",
    "@types/jsdom": "^21.1.1",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^20.3.1",
    "@types/nunjucks": "^3.2.2",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^9.0.2",
    "@types/yamljs": "^0.2.31",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "eslint": "^8.42.0",
    "husky": "^4.3.8",
    "jest": "^29.5.0",
    "lint-staged": "13.2.2",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "prettier --write",
      "npm run lint:fix"
    ]
  }
}
